{
	"env": {
		"browser": true,
		"jquery": true
	},
	"globals": {
		"sap": "readable"
	},
	"root": true,
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 5
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": [
			"error",
			"never"
		]
	},
	"overrides": [
		{
			"files": ["Gulpfile.js"],
			"env": {
				"node": true,
				"es6": true
			},
			"globals": {
				"sap": "off"
			},
			"parserOptions": {
				"ecmaVersion": 2017
			}
		}
	]
}
